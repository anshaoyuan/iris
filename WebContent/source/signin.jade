extends layout
block content
  section.signin.col-md-4.col-md-offset-4

    form(name="signinForm",novalidate,ng-controller="signController",ng-submit="login()",method="post")

      fieldset
        legend 登录
          a.btn.btn-link.pull-right(href="#/signup") 注册

        .form-group
          label 账号：
          input.form-control(type="text",autocomplete="off", placeholder="请输入您的邮件地址",required,name="username",ng-model="username")

        .form-group
          label 密码：
          input.form-control(type="password",autocomplete="off", placeholder="请输入您的密码",required,name="password",ng-model="password")

      fieldset.action
        .form-group.clearfix
          .pull-left
            span(ng-cloak,ng-show="usernameRequired",style="color:red")
              | 用户名不能为空!
            span(ng-cloak,ng-show="passwordRequired",style="color:red")
              | 密码不能为空!
            span(ng-cloak,ng-show="loginFail",style="color:red")
              | 用户名或密码错误!
          button.btn.btn-success.pull-right(type="submit")
            span.bicon.bicon-ok
            | 登录
          a.btn.btn-link.pull-right(href="") 找回密码
